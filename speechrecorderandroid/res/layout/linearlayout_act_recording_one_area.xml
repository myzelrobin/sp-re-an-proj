<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_linearlayout_activity_example" >

    <LinearLayout
    android:background="#FFFFFF"
    android:layout_width="800dp"
    android:layout_height="450dp"
    android:orientation="horizontal" >
        
        <LinearLayout
        android:layout_width="200dp"
        android:layout_height="450dp"
        android:orientation="vertical" >
                <LinearLayout
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:orientation="horizontal"
                android:gravity="center"  >
                    <TextView
                    android:id="@+id/act_recording_text_intro_textvalue"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/act_recording_instru_text" 
                    android:textSize="16sp"
                    android:textStyle="italic" />
                </LinearLayout>
                
                <LinearLayout
		        android:layout_width="200sp"
		        android:layout_height="75dp"
		        android:orientation="horizontal"
		        android:gravity="center"  >
		            
			           <ImageView 
			           android:layout_width="50dp"
			           android:layout_height="50dp"
			           android:scaleType="fitXY"
			           android:id="@+id/act_recording_control_circle1"
			           android:src="@drawable/icon_circle_red"  />
			           
			           <ImageView 
			           android:layout_width="50dp"
			           android:layout_height="50dp"
			           android:scaleType="fitXY"
			           android:id="@+id/act_recording_control_circle2"
			           android:src="@drawable/icon_circle_yellow"  />
			            
			           <ImageView 
			           android:layout_width="50dp"
			           android:layout_height="50dp"
			           android:scaleType="fitXY"
			           android:id="@+id/act_recording_control_circle3"
			           android:src="@drawable/icon_circle_green"  />
		           
		        </LinearLayout>
		        
                <LinearLayout
                android:layout_width="200sp"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:gravity="center"  >
                    
                    <Button
                    android:id="@+id/act_recording_control_button_record"
                    android:layout_width="100sp"
                    android:layout_height="50dp"
                    android:text="@string/record"/>
                   
                </LinearLayout>
		        
        </LinearLayout>
        
        <LinearLayout
        android:layout_width="600dp"
        android:layout_height="450dp"
        android:orientation="vertical" >
                <TextView
                android:id="@+id/act_recording_text_prompt_textvalue"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:padding="20dp"
                android:gravity="center"
                android:text="@string/act_recording_promptarea_text" 
                android:textSize="48sp"
                android:textStyle="bold" />
                
        </LinearLayout>
        
    </LinearLayout>
</LinearLayout>

